{
  "watch": ["src", ".env"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".git",
    "node_modules",
    "dist",
    "build",
    "coverage",
    "logs",
    "*.log"
  ],
  "exec": "ts-node --transpile-only -r tsconfig-paths/register ./src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "delay": 1000,
  "verbose": false,
  "colours": true,
  "legacyWatch": false,
  "signal": "SIGTERM",
  "events": {
    "restart": "echo '\nðŸ”„ Server restarting...\n'",
    "crash": "echo '\nðŸ’¥ Server crashed! Fix the error and save to restart.\n'"
  }
}
