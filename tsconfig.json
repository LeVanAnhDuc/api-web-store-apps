{
  "compilerOptions": {
    "module": "node16",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "backup"]
}
